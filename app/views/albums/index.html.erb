<h1>Listing albums</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Released</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.title %></td>
    <td><%= album.released %></td>
    <td><%=  album.songs.each do {|x| link_to(x.name, song_path(x))})%></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

